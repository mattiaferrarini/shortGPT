{
    "manifest_version": 2,
    "name": "ShortGPT",
    "version": "1.0.0",
    "description": "Make ChatGPT's answers shorter.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*"
            ],
            "js": [
                "content/content.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "48": "icons/icon-48.png",
            "96": "icons/icon-96.png"
        }
    },
    "applications": {
    "gecko": {
      "id": "ShortGPT@mattiaferrarini.com"
    }
  }
}